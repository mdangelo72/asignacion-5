      <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
   </head>
   <!-- body -->
   <body class="main-layout">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="./images/loading.gif" alt="#" /></div>
      </div>
      <!-- end loader -->
      <!-- header -->
      <header>
         <!-- header inner -->
         <div class="header">
            <div class="container">
               <div class="row">
                  <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                     <div class="full">
                        <div class="center-desk">
                           <div class="logo">
                              <a href="index.html"><img src="./images/noticias.png" alt="#" /></a>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                     <nav class="navigation navbar navbar-expand-md navbar-dark ">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarsExample04">
                           <ul class="navbar-nav mr-auto">
                              <li class="nav-item">
                                 <a class="nav-link" href="#">Inicio </a>
                              </li>
                              <li class="nav-item">
                                 <a class="nav-link" href="#">Acerca de</a>
                              </li>
                              <li class="nav-item">
                                 <a class="nav-link" href="#">Contacto</a>
                              </li>
                           </ul>
                           <div class="Call"><a href="#"> <span class="yellow">Llama al: </span>0412-3037097</a></div>
                        </div>
                     </nav>
                  </div>
               </div>
            </div>
         </div>
      </header>
      <!-- end header inner -->
      <!-- end header -->
      <!-- banner -->
      <section class="banner_main">
         <div class="container">
         <div class="row d_flex">
            <div class="col-md-6">
               <div class="text-bg">
                  <h1 >Registra Tú <marquee >Noticia</marquee> </h1>
                  <p> Por acá podras registrar cualquier tipo de noticia de interés para el mundo ...</p>
                  <a class="read_more" href="#">Leer Más</a>
               </div>
            </div>
            <div class="col-md-6">
               <form method="POST" action="/get-noticia"  id="request" class="main_form">
                  <div class="row">
                     <div class="col-md-12 ">
                        <input class="contactus" placeholder="Titulo" type="type" name="titulo"> 
                     </div>
                     <div class="col-md-12">
                        <input class="contactus" placeholder="Autor" type="type" name="autor"> 
                     </div>
                     <div class="col-md-12">
                        <input class="contactus" placeholder="Fecha" type="type" name="fecha">                          
                     </div>
                     <div class="col-md-12">
                        <textarea class="contactus" placeholder="Descripción" type="type" name="descripcion" Message="Name">Descripción</textarea>
                     </div>
                     <div class="col-sm-12">
                        <button type="submit" class="send_btn">Crear</button>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </section>
      <!-- end banner -->
      <!-- food -->
      
      <!-- end food -->
      <!-- works -->
      <div class="works">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <div class="titlepage">
                     <span>Como funciona ?</span>
                     <h2> <strong class="yellow2">Solo Crea tús Noticias...</strong>  y Listo!</h2>
                  </div>
               </div>
            </div>
            
            <div class="row">
               {{#each noticia}}
               <div class="col-md-4">
                  <div id="white_bg" class="works_box">
                     <h4>{{id}}</h4>
                     <p> Título:  {{titulo}} </p>
                     <p> Autor :  {{autor}} </p>
                     <p> Fecha :  {{fecha}} </p>
                     <p> Descripción: {{descripcion}} </p>
                  </div>
               </div>
               {{/each}}
            </div>
            
         </div>
      </div>
      <!-- end works -->
     
      <!-- end clients -->
      <!--  footer -->
      <footer>
         <div class="footer">
            <div class="copyright">
               <div class="container">
                  <div class="row">
                     <div class="col-md-12">
                        <p>Copyright 2023 All Right Reserved By <a href="https://html.design/"> Miguel D'angelo</a></p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </footer>
      <!-- end footer -->
      <!-- Javascript files-->
      <script src="./js/jquery.min.js"></script>
